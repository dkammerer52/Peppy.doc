pcm.!default {
  type plug
  slave.pcm myequal;
}
pcm.myequal {
  type equal;
  slave.pcm reformat;
}
pcm.reformat {
  type lfloat
  slave {
    pcm "mypeppy"
    format S16_LE
  }
}
pcm.mypeppy {
  type meter
  slave.pcm "plughw:0,0"
  scopes.0 peppyalsa
}
ctl.equal {
  type equal;
}
pcm_scope.peppyalsa {
  type peppyalsa
  decay_ms 400
  meter "/home/pi/myfifo"
  meter_max 100
  meter_show 0
  spectrum "/home/pi/myfifosa"
  spectrum_max 100
  spectrum_size 30
}
pcm_scope_type.peppyalsa {
  lib /usr/local/lib/libpeppyalsa.so
}
